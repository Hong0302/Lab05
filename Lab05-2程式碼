#include<Keypad.h>
const byte rows=4;
const byte cols=4;
char keys[rows][cols]={{'F','B','A','0'},{'E','3','2','1'},
                       {'D','6','5','4'},{'C','9','8','7'}};
byte rowPins[rows]={5,4,3,2};
byte colPins[cols]={10,9,8,7};
Keypad keypad =Keypad( makeKeymap(keys), rowPins,colPins, rows, cols);
int i;
int j;
const byte num[10]={B00111111, B00000110,
                    B01011011, B01001111,
                    B01100110, B01101101,
                    B01111101, B00000111,
                    B01111111, B01101111};
 const int seg[]={11,12,13,14,15,16,17};
void setup() 
{
  Serial.begin(9600); 
  for(j=0;j<7;j++)
  {
    pinMode(seg[i],OUTPUT);
  }
}



void loop()
{
    char key = keypad.getKey();
    int   i=key-48;
    if (key != NO_KEY)
    {
        Serial.println(key);
        for(j=0;j<7;j++)
        {
          if(bitRead(num[i],j))
              digitalWrite(seg[j],HIGH);
          else
              digitalWrite(seg[j],LOW);
        }
        
    }

}
